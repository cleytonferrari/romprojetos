@model System.Web.Mvc.HandleErrorInfo
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <!-- Title and other stuffs -->
    <title>Erro</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta name="author" content="">

    <!-- Stylesheets -->
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <!-- Font awesome icon -->
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <!-- Main style sheet -->
    <link href="~/Content/style.css" rel="stylesheet" />
    <!-- Responsive Bootstrap -->
    <link href="~/Content/bootstrap-responsive.css" rel="stylesheet" />
    <!-- HTML5 Support for IE -->
    <!--[if lt IE 9]>
  <script src="~/Scripts/html5shim.js"></script>
  <![endif]-->

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Content/img/favicon/favicon.png">
</head>

<body>
    <!-- Form area -->
    <div class="error-page">
        <div class="container-fluid">

            <div class="row-fluid">
                <div class="span12">
                    <!-- Widget starts -->
                    <div class="widget wblue">
                        <!-- Widget head -->
                        <div class="widget-head">
                            <i class="icon-question-sign"></i>Error 
                        </div>

                        <div class="widget-content">
                            <div class="padd error">

                                <h1>Opps!!! Isto é um erro</h1>
                                <p>@Model.Exception.Message</p>
                                <br />

                                <form method="get" id="searchform" action="#" class="form-search">
                                    <input type="text" value="" name="s" id="s" class="input-medium" />
                                    <button type="submit" class="btn">Buscar</button>
                                </form>

                                <br />
                                <div class="horizontal-links">
                                    <a href="@Url.Action("Index", "Home")">Dashboard</a> | <a href="@Url.Action("Index", "Projeto")">Projetos</a>
                                </div>

                            </div>
                        </div>
                        <div class="widget-foot">
                            <!-- Footer goes here -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- JS -->
    <script src="~/Scripts/jquery-2.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
